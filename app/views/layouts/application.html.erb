<!DOCTYPE html>
<html>
  <head>
    <title>Film</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <ul>
    <li><%= link_to "Movies", movies_path%> </li>
  <li><%= link_to "New Comment", new_review_path %></li>
  <li><%=link_to "give a rating", new_rating_path %></li>
  </ul>
    <% if @current_user %>
    <li class='right'><%= @current_user.name %></li>
         <li class='right'><%= link_to "Log Out", sessions_path, method: :delete %></li>
  <%  else %>
        <li class='right'><%= link_to 'Sign-up', new_user_path %></li>
          <li class='right'><%= link_to 'Sign-in', login_path %></li>
          <% end %>
    <%= yield %>
  </body>
</html>
