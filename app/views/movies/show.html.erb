<img class="index-img" src="<%= @movie.poster %>" alt="movie"><br>
<h3> Review Thoughts: </h3>
 <h4> <% @movie.reviews.each do |review| %></h4>
 <h4>Comments From : <%= review.user.name%></h4>
 <%= review.comment %>
    <% if review.user == @current_user %>                                                         
        <%= button_to "Delete Comment", review_path(review), method: :delete %>
        <%= button_to "edit comment", edit_review_path(review), method: :get %>
   <% end %>
 <% end %> 

 <h3> Rating: </h3>
<% @movie.ratings.each do |rating|%><br>
<%=rating.user.name%> || <%= rating.rate%><br>

   <% if rating.user == @current_user %>
   <%= button_to "delete rating", rating_path(rating), method: :delete  %>
   <%= button_to "edit rating", edit_rating_path(rating), method: :get %>
<% end %>
<% end %>
<h1><%= @movie.title%></h1><br>

<h5>RELEASED YEAR:   <%= @movie.year%></h5><br>
<h5>STORY :  <%= @movie.plot%></h5><br>
<h5>DIRECTOR:  <%= @movie.director%></h5><br>
<h5>AWARDS:  <%= @movie.award %></h5><br>
<h5>GENRE:    <%= @movie.genre%></h5><br>
 <% @movie.celebrities.uniq.each  do |celebrity| %>
 <h5>ACTOR: <%= celebrity.name%></h5>
 <% end %> 
 <% @movie.favorites.each do |favorite|%>
 <% end %>







    





  
